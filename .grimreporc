#grimrepo configfile

##### LOCAL SETTING ######
export GR_REPONAME=myrepo

#server which will contain repository
export GR_SERVER=`whoami`@localhost;

#rootdirectory for server -- must have trailing slash
export GR_SERVERROOT=`pwd`/serverroot/
#export GR_SERVERROOT=/media/documents/synced/projects/grimrepo/serverroot/

#local rootdirectory -- must have trailing slash
export GR_LOCALROOT=`pwd`/localroot/
#export GR_LOCALROOT=/media/documents/synced/projects/grimrepo/localroot/

#ignore dirs

##### GLOBAL SETTINGS ######
#metadata
export GR_INDEX=/home/kasper/.grimrepo
#export GR_INDEX=/media/documents/synced/projects/.grimrepo

#timespan for each log (seconds)
export GR_LOG_TIME=10

#setup path to files
export GR_PATH=/home/kasper/grimrepo

